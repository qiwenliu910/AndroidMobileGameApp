<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="310dp"
        android:layout_height="97dp"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/quiz_time"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="310dp"
        android:layout_height="92dp"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="44dp"
        android:text="Level 1: True or False Questions \n\nLevel 2: Multiple Choice Questions"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView18"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="408dp"
        android:layout_height="443dp"
        android:gravity="center"
        android:text="Take a deep breath. \n\n This is your chance to show us \n\n How much you've learned. \n\n We WANT to give you the credit  \n\n That you've earned. \n\n A number does not define you. \n\n Good luck!"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="2dp"
        android:text="@string/start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />
</androidx.constraintlayout.widget.ConstraintLayout>