<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/BTNanimal1"
        android:layout_width="156dp"
        android:layout_height="137dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/animal1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/BTNanimal2"
        android:layout_width="117dp"
        android:layout_height="90dp"
        android:layout_marginStart="244dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/animal2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/BTNanimal3"
        android:layout_width="229dp"
        android:layout_height="198dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/animal3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTNanimal2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="233dp"
        android:layout_height="64dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="72dp"
        android:text="You have entered the bonus level! pick your favorite animal and take your chance to earn extra money!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVmoneyearned"
        android:layout_width="84dp"
        android:layout_height="51dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="304dp"
        android:textColor="#2372E9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BTNplaygame2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="14dp"
        android:text="Play Game"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVmoneyearned" />

</androidx.constraintlayout.widget.ConstraintLayout>