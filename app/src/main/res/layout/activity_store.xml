<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/TVmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="80dp"
        android:text="Money"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVcolor_scheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="110dp"
        android:editable="false"
        android:text="Color Scheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVcolor_red"
        android:layout_width="77dp"
        android:layout_height="54dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="157dp"
        android:background="#CEE02424"
        android:textColorHighlight="#FFF8F8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVcolor_default"
        android:layout_width="77dp"
        android:layout_height="54dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="28dp"
        android:background="#C5C5C5"
        android:textColorHighlight="#FFF8F8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVcolor_scheme" />

    <TextView
        android:id="@+id/TVcolor_blue"
        android:layout_width="77dp"
        android:layout_height="54dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="156dp"
        android:background="#CE246FE0"
        android:textColorHighlight="#FFF8F8"
        app:layout_constraintStart_toEndOf="@+id/TVcolor_red"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Text1"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:layout_marginStart="180dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVcolor_red" />

    <EditText
        android:id="@+id/Text4"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IVhorse1" />

    <EditText
        android:id="@+id/Text3"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:layout_marginStart="80dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/Text1"
        app:layout_constraintTop_toBottomOf="@+id/TVcolor_blue" />

    <Button
        android:id="@+id/BTNbuy_red"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:text="Buy"
        app:layout_constraintStart_toEndOf="@+id/BTNbuy_default"
        app:layout_constraintTop_toBottomOf="@+id/Text1" />

    <Button
        android:id="@+id/BTNbuy_horse"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_marginStart="152dp"
        android:text="Buy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Text4" />

    <Button
        android:id="@+id/BTNbuy_default"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="46dp"
        android:text="current"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVcolor_default" />

    <Button
        android:id="@+id/BTNbuy_default_horse"
        android:layout_width="101dp"
        android:layout_height="37dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="77dp"
        android:text="current"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TV_horse" />

    <Button
        android:id="@+id/BTNbuy_blue"
        android:layout_width="108dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="48dp"
        android:text="Buy"
        app:layout_constraintStart_toEndOf="@+id/BTNbuy_red"
        app:layout_constraintTop_toBottomOf="@+id/TVcolor_blue" />

    <Button
        android:id="@+id/BTNback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="42dp"
        android:text="back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/IVhorse1"
        android:layout_width="112dp"
        android:layout_height="98dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTNbuy_red"
        app:srcCompat="@drawable/horse1" />

    <TextView
        android:id="@+id/TV_horse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="113dp"
        android:text="horse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BTNbuy_default" />


</androidx.constraintlayout.widget.ConstraintLayout>